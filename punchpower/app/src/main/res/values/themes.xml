<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Punchpower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Result를 위한 theme -->
    <style name="AppTheme.Result" parent="Theme.Punchpower">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">4dp</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/teal_200</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>